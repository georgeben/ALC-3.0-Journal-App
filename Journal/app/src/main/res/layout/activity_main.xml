<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/myjournal"
    tools:context="com.kurobarabenjamingeorge.journalapp.MainActivity">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleSignIn"
        android:layout_width="@dimen/sign_in_button_width"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_button_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sign_in_button_bottom_margin"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signInProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/googleSignIn"
        android:layout_marginBottom="@dimen/progress_bar_bottom_margin"/>

</RelativeLayout>
